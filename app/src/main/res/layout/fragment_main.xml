<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              android:paddingBottom="@dimen/activity_vertical_margin"
              tools:context=".MainActivity$PlaceholderFragment" android:orientation="vertical"
              android:background="@color/background_material_dark"
              android:id="@+id/fragment_main">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="How may we help you?"
            android:textColor="@color/background_material_light"
            android:id="@+id/textView12" />

    <GridLayout
            android:layout_width="match_parent"
            android:layout_height="305dp" android:rowCount="2" android:columnCount="2" android:id="@+id/grid">
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton1" android:layout_row="0" android:layout_column="0"
                android:background="@drawable/cash_flow_button"
                android:onClick="goToCashFlow"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton2" android:layout_row="0" android:layout_column="1"
                android:background="@drawable/savings_button"
                android:onClick="goToSavings"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton3" android:layout_row="1" android:layout_column="0"
                android:background="@drawable/bill_pay_button"
                android:onClick="goToBillPay"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton4" android:layout_row="1" android:layout_column="1"
                android:background="@drawable/alerts_button"
                android:onClick="goToAlerts"/>
    </GridLayout>

    <ListView
            android:id="@+id/listview_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background_material_light"/>

</LinearLayout>
