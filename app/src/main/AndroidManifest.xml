<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.sunshine.app" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BillPayActivity"
            android:label="@string/title_activity_bill_pay" >
        </activity>
        <activity
            android:name=".CashFlowActivity"
            android:label="@string/title_activity_cash_flow" >
        </activity>
        <activity
            android:name=".SavingsActivity"
            android:label="@string/title_activity_savings" >
        </activity>
        <activity
            android:name=".AlertsActivity"
            android:label="@string/title_activity_alerts" >
        </activity>
        <activity
            android:name=".PaymentActivity"
            android:label="@string/title_activity_payment" >
        </activity>
    </application>

</manifest>
